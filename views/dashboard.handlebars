<section class="dashB-container">
  {{!-- <h2>Create New Post</h2> --}}

    <form class="new-post-form">
      <label for="post-message">Message</label>
      <textarea rows="6" cols="50" id="post-massage" name="post-massage" ></textarea>
      <button type="submit" class="btn-dark rounded col">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> messages post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

